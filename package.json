{
    "name": "personal-blog",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "npm run clear && npm run generate:sitemap && next build",
        "dev": "next dev",
        "start": "next start",
        "format": "prettier --write **/*.{ts,tsx,js,jsx,json,md,mdx} --ignore-path .gitignore",
        "lint": "npm run lint:eslint && npm run lint:prettier",
        "lint:eslint": "next lint",
        "lint:prettier": "prettier --check **/*.{ts,tsx,js,jsx,json,md,mdx} --ignore-path .gitignore",
        "compose": "tsc ./scripts/compose.ts && node ./scripts/compose",
        "clear": "rm -rf .next",
        "generate:sitemap": "tsc ./scripts/generate-sitemap.ts && node ./scripts/generate-sitemap"
    },
    "dependencies": {
        "mdx-bundler": "^9.0.0",
        "next": "^12.1.6",
        "next-themes": "^0.2.0",
        "preact": "^10.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "sharp": "^0.30.4",
        "smoothscroll-polyfill": "^0.4.4",
        "socket.io-client": "^4.5.0",
        "tailwindcss": "^3.0.24",
        "typescript": "^4.6.4"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^12.1.6",
        "@svgr/webpack": "^6.2.1",
        "@tailwindcss/forms": "^0.5.1",
        "@tailwindcss/typography": "^0.5.2",
        "@types/node": "^17.0.34",
        "@types/react": "^17.0.43",
        "@types/smoothscroll-polyfill": "^0.3.1",
        "autoprefixer": "^10.4.7",
        "dedent": "^0.7.0",
        "esbuild": "^0.14.39",
        "eslint": "^8.15.0",
        "eslint-config-next": "^12.1.6",
        "eslint-plugin-compat": "^4.0.2",
        "file-loader": "^6.2.0",
        "github-slugger": "^1.4.0",
        "globby": "^11.1.0",
        "gray-matter": "^4.0.3",
        "image-size": "^1.0.1",
        "inquirer": "^8.2.4",
        "next-compose-plugins": "^2.2.1",
        "next-pwa": "^5.5.2",
        "postcss": "^8.4.13",
        "prettier": "^2.6.2",
        "rehype-autolink-headings": "^6.1.1",
        "rehype-citation": "^0.4.0",
        "rehype-prism-plus": "^1.4.0",
        "rehype-slug": "^5.0.1",
        "remark-footnotes": "^4.0.1",
        "remark-gfm": "^3.0.1",
        "remark-math": "^5.1.1",
        "unist-util-visit": "^4.1.0"
    }
