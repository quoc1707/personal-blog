{
    "name": "personal-blog",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "pnpm run clear && pnpm run generate:sitemap && next build",
        "dev": "next dev",
        "start": "next start",
        "format": "prettier --write **/*.{ts,tsx,js,jsx,json,md,mdx} --ignore-path .gitignore",
        "lint": "pnpm run lint:eslint && pnpm run lint:prettier",
        "lint:eslint": "next lint",
        "lint:prettier": "prettier --check **/*.{ts,tsx,js,jsx,json,md,mdx} --ignore-path .gitignore",
        "compose": "tsc ./scripts/compose.ts && node ./scripts/compose",
        "clear": "rimraf .next",
        "generate:sitemap": "tsc ./scripts/generate-sitemap.ts && node ./scripts/generate-sitemap"
    },
    "dependencies": {
        "mdx-bundler": "9.0.1",
        "next": "12.2.0",
        "next-themes": "0.2.0",
        "preact": "10.10.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "sharp": "0.30.7",
        "smoothscroll-polyfill": "0.4.4",
        "socket.io-client": "4.5.1",
        "tailwindcss": "3.1.6",
        "typescript": "4.7.4"
    },
    "devDependencies": {
        "@babel/core": "7.18.9",
        "@next/bundle-analyzer": "12.2.0",
        "@svgr/webpack": "6.3.1",
        "@tailwindcss/forms": "0.5.2",
        "@tailwindcss/typography": "0.5.4",
        "@types/node": "18.0.6",
        "@types/react": "17.0.43",
        "@types/smoothscroll-polyfill": "0.3.1",
        "autoprefixer": "10.4.7",
        "dedent": "0.7.0",
        "esbuild": "0.14.49",
        "eslint": "8.20.0",
        "eslint-config-next": "12.2.0",
        "eslint-plugin-compat": "4.0.2",
        "file-loader": "6.2.0",
        "github-slugger": "1.4.0",
        "globby": "11.1.0",
        "gray-matter": "4.0.3",
        "image-size": "1.0.2",
        "inquirer": "8.2.4",
        "postcss": "8.4.14",
        "prettier": "2.7.1",
        "rehype-autolink-headings": "6.1.1",
        "rehype-citation": "0.4.0",
        "rehype-prism-plus": "1.4.2",
        "rehype-slug": "5.0.1",
        "remark-footnotes": "4.0.1",
        "remark-gfm": "3.0.1",
        "remark-math": "5.1.1",
        "rimraf": "3.0.2",
        "unist-util-visit": "4.1.0",
        "webpack": "5.73.0"
    }
}
